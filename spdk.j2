<?xml version="1.0" encoding="UTF-8"?>

<Speedrum FileType="DrumKit" version="2" creator="WaveScan">
  <Pads>
  {% for pad in pads -%}
    <Pad PadNum="{{ pad['num'] }}" PadName="{{ pad['midi'] }} {{ pad['name'] }}" IsCustomName="1" VoiceMode="1"
         Cut="0" CutBy="0" Trigger="0" IsMute="0.0" IsSolo="0.0" Output="{{ pad['out'] }}"
         Volume="1.0" Pan="0.0" Pitch="0.0" VelToAmp="1.0">
      {% for layer in pad['layers'] %}
      <Layer LayerNum="{{ layer['num'] }}" SampleFile="../{{ layer['rel_pathname'] }}"
             SampleFileAbsolute="{{ layer['abs_pathname'] }}"
             LoopStart="0.0" LoopEnd="1.0" LP="20000.0" HP="20.0" AmpEnvIsOn="0.0"
             AmpAttack="0.0" AmpHold="1.0" AmpDecay="0.0"/>
      {% endfor %}
    </Pad>
  {% endfor %}
 </Pads>
</Speedrum>
